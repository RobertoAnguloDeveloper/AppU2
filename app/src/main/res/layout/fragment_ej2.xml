<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.Ej2Fragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ej2Tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/ej2Title"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ej2Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ej2Description"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:padding="20dp"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/dice1"
                    android:layout_width="200dp"
                    android:layout_height="166dp"
                    android:contentDescription="DiceLeft"
                    android:src="@drawable/d1" />


                <ImageView
                    android:id="@+id/dice2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:contentDescription="DiceRight"
                    android:src="@drawable/d1" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/btnTirarDados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Tirar/Detener" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</FrameLayout>